<Window x:Class="SimLock.Locker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimLock"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Grid x:Name="MainGrid">
        <!-- Activation Required Screen -->
        <Grid x:Name="ActivationRequiredScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="20"
                    Padding="60,40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="600">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ACTIVATION REQUIRED"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="This installation of SimLock has not been activated."
                               FontSize="18"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,30"/>

                    <TextBlock Text="Please contact your administrator to activate this software, or contact support:"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock Text="support@neutrocorp.com"
                               FontSize="16"
                               Foreground="{StaticResource AccentBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>

                    <Button Content="Close"
                            Style="{StaticResource TouchButtonStyle}"
                            Width="200"
                            Height="60"
                            Margin="0,30,0,0"
                            Click="CloseActivationRequired_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Splash Screen -->
        <Grid x:Name="SplashScreen" Visibility="Visible" MouseDown="SplashScreen_MouseDown">
            <!-- Background Image (optional) -->
            <Image x:Name="SplashBackgroundImage"
                   Stretch="UniformToFill"
                   Visibility="Collapsed"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Floating Semi-Transparent Text Box -->
                <Border x:Name="SplashTextOverlay"
                        Grid.Row="1"
                        Background="#DD1A2F1A"
                        CornerRadius="20"
                        Padding="60,40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="900">
                    <StackPanel HorizontalAlignment="Center">
                        <Image x:Name="SplashLogo"
                               MaxHeight="200"
                               MaxWidth="400"
                               Margin="0,0,0,30"
                               Stretch="Uniform"/>

                        <TextBlock x:Name="SplashTitleText"
                                   Text="Welcome to SimWoods Golf"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SplashSubtitleText"
                                   Text="Your Premium Golf Simulation Experience"
                                   FontSize="24"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="Touch anywhere to continue..."
                                   FontSize="18"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,0"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>

                <!-- Custom Message -->
                <TextBlock x:Name="SplashCustomMessage"
                           Grid.Row="3"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="40,0,40,30"
                           Visibility="Collapsed"/>
            </Grid>
        </Grid>

        <!-- Main Menu Screen -->
        <Grid x:Name="MainMenuScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,0">
                <Image x:Name="MenuLogo"
                       MaxHeight="150"
                       MaxWidth="300"
                       Stretch="Uniform"/>
            </StackPanel>

            <!-- Main Buttons -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Please Select an Option"
                           FontSize="32"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,50"/>

                <!-- Returning Golfer Button -->
                <Button x:Name="ReturningGolferButton"
                        Content="Returning Golfer"
                        Style="{StaticResource TouchButtonStyle}"
                        Width="500"
                        Height="120"
                        FontSize="36"
                        Margin="0,0,0,15"
                        Click="ReturningGolfer_Click"/>

                <!-- Tutorial Button -->
                <Button x:Name="TutorialButton"
                        Content="First Time? Watch Tutorial"
                        Style="{StaticResource TouchButtonStyle}"
                        Width="500"
                        Height="120"
                        FontSize="32"
                        Background="{StaticResource AccentBrush}"
                        Foreground="#000000"
                        Margin="0,0,0,15"
                        Click="NewGolfer_Click"/>

                <!-- Custom Button 1 -->
                <Button x:Name="CustomButton1"
                        Content="Custom Action 1"
                        Style="{StaticResource TouchButtonStyle}"
                        Width="500"
                        Height="120"
                        FontSize="32"
                        Background="{StaticResource PrimaryLightBrush}"
                        Margin="0,0,0,15"
                        Visibility="Collapsed"
                        Click="CustomButton1_Click"/>

                <!-- Custom Button 2 -->
                <Button x:Name="CustomButton2"
                        Content="Custom Action 2"
                        Style="{StaticResource TouchButtonStyle}"
                        Width="500"
                        Height="120"
                        FontSize="32"
                        Background="{StaticResource PrimaryLightBrush}"
                        Visibility="Collapsed"
                        Click="CustomButton2_Click"/>
            </StackPanel>

            <!-- Custom Message -->
            <TextBlock x:Name="MenuCustomMessage"
                       Grid.Row="2"
                       FontSize="16"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="40,20,40,10"
                       Visibility="Collapsed"/>

            <!-- Footer -->
            <TextBlock Grid.Row="3"
                       Text="SimWoods Golf"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Opacity="0.5"/>
        </Grid>

        <!-- PIN Entry Screen -->
        <Grid x:Name="PinEntryScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo and Back Button -->
            <Grid Grid.Row="0" Margin="20,20,20,0">
                <Button Content="Back to Main Menu"
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="BackToMainMenu_Click"/>
                <Image x:Name="PinLogo"
                       MaxHeight="80"
                       MaxWidth="200"
                       HorizontalAlignment="Center"
                       Stretch="Uniform"/>
            </Grid>

            <!-- PIN Entry Content -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock x:Name="PinScreenTitleText"
                           Text="Enter Your 4-Digit Code"
                           FontSize="32"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- PIN Display -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <Border Width="60" Height="80"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="10" Margin="5">
                        <TextBlock x:Name="Pin1"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Width="60" Height="80"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="10" Margin="5">
                        <TextBlock x:Name="Pin2"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Width="60" Height="80"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="10" Margin="5">
                        <TextBlock x:Name="Pin3"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Width="60" Height="80"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="10" Margin="5">
                        <TextBlock x:Name="Pin4"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="PinErrorText"
                           Text="Incorrect PIN. Please try again."
                           FontSize="18"
                           Foreground="{StaticResource ErrorBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Visibility="Collapsed"/>

                <!-- Numpad -->
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="3" Grid.Column="0" Content="C" Style="{StaticResource NumpadButtonStyle}"
                            Background="{StaticResource ErrorBrush}" Click="ClearPin_Click"/>
                    <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource NumpadButtonStyle}" Click="NumPad_Click"/>
                    <Button Grid.Row="3" Grid.Column="2" Content="DEL" Style="{StaticResource NumpadButtonStyle}"
                            FontSize="24" Click="DeletePin_Click"/>
                </Grid>
            </StackPanel>

            <!-- Custom Message -->
            <TextBlock x:Name="PinCustomMessage"
                       Grid.Row="2"
                       FontSize="16"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="40,10,40,30"
                       Visibility="Collapsed"/>
        </Grid>

        <!-- Video Player Screen -->
        <Grid x:Name="VideoPlayerScreen" Visibility="Collapsed" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo and Back Button -->
            <Grid Grid.Row="0" Margin="20,20,20,0" Background="Transparent">
                <Button Content="Back to Main Menu"
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="BackToMainMenu_Click"/>
                <Image x:Name="VideoLogo"
                       MaxHeight="60"
                       MaxWidth="150"
                       HorizontalAlignment="Center"
                       Stretch="Uniform"/>
            </Grid>

            <!-- Video Player - Plays through without controls -->
            <MediaElement x:Name="VideoPlayer"
                          Grid.Row="1"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          MediaEnded="VideoPlayer_MediaEnded"
                          MediaOpened="VideoPlayer_MediaOpened"
                          MediaFailed="VideoPlayer_MediaFailed"
                          Stretch="Uniform"/>

            <!-- Time Remaining Display -->
            <Border Grid.Row="2" Background="#80000000" Padding="20">
                <TextBlock x:Name="TimeRemainingText"
                           Text="Time Remaining: --:--"
                           FontSize="24"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
