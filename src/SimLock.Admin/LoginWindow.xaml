<Window x:Class="SimLock.Admin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimLock Admin - Login"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1A2F1A">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

        <TextBlock Text="SimLock Admin"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <TextBlock Text="Admin Password"
                   Foreground="White"
                   FontSize="14"
                   Margin="0,0,0,8"/>

        <PasswordBox x:Name="PasswordInput"
                     Height="35"
                     FontSize="14"
                     Background="#2D4A2D"
                     Foreground="White"
                     BorderBrush="#2E7D32"
                     BorderThickness="1"
                     KeyDown="PasswordInput_KeyDown"
                     Margin="0,0,0,10"/>

        <TextBlock x:Name="ErrorText"
                   Text="Incorrect password"
                   Foreground="Red"
                   FontSize="12"
                   Visibility="Collapsed"
                   Margin="0,0,0,10"/>

        <Button Content="Login"
                Width="100"
                Height="35"
                HorizontalAlignment="Center"
                Background="#2E7D32"
                Foreground="White"
                FontSize="14"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Login_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="15,8">
                        <TextBlock Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBlock Text="Default password: admin123"
                   Foreground="#888888"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"/>

    </StackPanel>
</Window>
