<Window x:Class="SimLock.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimLock Admin Panel"
        Width="900" Height="1000"
        MinWidth="750" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="SimLock Admin Panel"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,30"/>

            <!-- License Activation Section -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20"
                    BorderBrush="{StaticResource AccentBrush}"
                    BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="License Activation"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource AccentBrush}"
                               Margin="0,0,0,15"/>

                    <!-- Activation Status Display -->
                    <Border x:Name="ActivationStatusBorder"
                            Background="#1E3D1E"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Status: "
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="14"/>
                                <TextBlock x:Name="ActivationStatusText"
                                           Text="Not Activated"
                                           Foreground="#FF5252"
                                           FontWeight="Bold"
                                           FontSize="14"/>
                            </StackPanel>
                            <TextBlock x:Name="ActivationEmailDisplay"
                                       Text=""
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                            <TextBlock x:Name="ActivationDateDisplay"
                                       Text=""
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock x:Name="MachineIdDisplay"
                                       Text=""
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,5,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Activation Input Panel -->
                    <StackPanel x:Name="ActivationInputPanel">
                        <Label Content="Email Address"/>
                        <TextBox x:Name="ActivationEmailInput" Margin="0,0,0,10"/>

                        <Label Content="License Key"/>
                        <TextBox x:Name="LicenseKeyInput"
                                 CharacterCasing="Upper"
                                 Margin="0,0,0,15"/>

                        <Button x:Name="ActivateButton"
                                Content="Activate License"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Background="{StaticResource AccentBrush}"
                                Foreground="#000000"
                                Click="Activate_Click"/>
                    </StackPanel>

                    <!-- Deactivation Panel (shown when activated) -->
                    <StackPanel x:Name="DeactivationPanel" Visibility="Collapsed">
                        <Button Content="Deactivate This Machine"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Background="#FF5722"
                                Click="Deactivate_Click"/>
                        <TextBlock Text="Deactivating allows you to use this license on another machine."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Support Info -->
                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="Support: "
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"/>
                        <TextBlock Text="support@neutrocorp.com"
                                   Foreground="{StaticResource AccentBrush}"
                                   FontSize="12"
                                   Cursor="Hand"
                                   MouseLeftButtonUp="SupportEmail_Click"
                                   TextDecorations="Underline"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Security Settings -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Security Settings"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Label Content="4-Digit Unlock Code"/>
                    <TextBox x:Name="UnlockCodeInput"
                             MaxLength="4"
                             Margin="0,0,0,15"/>

                    <Label Content="Admin Password"/>
                    <TextBox x:Name="AdminPasswordInput"
                             Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <!-- Button Configuration -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Lock Screen Buttons"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <!-- Standard Buttons Visibility -->
                    <TextBlock Text="Standard Buttons"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,10"/>
                    <CheckBox x:Name="ShowReturningGolferCheckbox"
                              Content="Show 'Returning Golfer' Button (PIN Entry)"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              IsChecked="True"
                              Margin="0,0,0,5"/>
                    <CheckBox x:Name="ShowTutorialCheckbox"
                              Content="Show 'Watch Tutorial' Button"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              IsChecked="True"
                              Margin="0,0,0,15"/>

                    <!-- Custom Button 1 -->
                    <Border BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Custom Button 1"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,10"/>
                            <CheckBox x:Name="ShowCustomButton1Checkbox"
                                      Content="Enable Custom Button 1"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Margin="0,0,0,10"/>

                            <Label Content="Button Label"/>
                            <TextBox x:Name="CustomButton1LabelInput"
                                     Text="Custom Action 1"
                                     Margin="0,0,0,10"/>

                            <Label Content="Action Type"/>
                            <ComboBox x:Name="CustomButton1ActionCombo"
                                      Margin="0,0,0,10"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Run Executable" Tag="RunExecutable"/>
                                <ComboBoxItem Content="Open URL" Tag="OpenUrl"/>
                                <ComboBoxItem Content="Play Local Video" Tag="PlayLocalVideo"/>
                            </ComboBox>

                            <Label Content="Target (File Path or URL)"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="CustomButton1TargetInput"
                                         Grid.Column="0"
                                         Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="BrowseCustomButton1Target_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Custom Button 2 -->
                    <Border BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Custom Button 2"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       Margin="0,0,0,10"/>
                            <CheckBox x:Name="ShowCustomButton2Checkbox"
                                      Content="Enable Custom Button 2"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Margin="0,0,0,10"/>

                            <Label Content="Button Label"/>
                            <TextBox x:Name="CustomButton2LabelInput"
                                     Text="Custom Action 2"
                                     Margin="0,0,0,10"/>

                            <Label Content="Action Type"/>
                            <ComboBox x:Name="CustomButton2ActionCombo"
                                      Margin="0,0,0,10"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Run Executable" Tag="RunExecutable"/>
                                <ComboBoxItem Content="Open URL" Tag="OpenUrl"/>
                                <ComboBoxItem Content="Play Local Video" Tag="PlayLocalVideo"/>
                            </ComboBox>

                            <Label Content="Target (File Path or URL)"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="CustomButton2TargetInput"
                                         Grid.Column="0"
                                         Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="BrowseCustomButton2Target_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Theme Customization -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Theme Customization"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Primary Color -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <Label Content="Primary Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemePrimaryColorInput" Text="#2E7D32"/>
                                <Border x:Name="ThemePrimaryColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#2E7D32"/>
                            </Grid>
                        </StackPanel>

                        <!-- Secondary Color -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                            <Label Content="Secondary Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemeSecondaryColorInput" Text="#60AD5E"/>
                                <Border x:Name="ThemeSecondaryColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#60AD5E"/>
                            </Grid>
                        </StackPanel>

                        <!-- Accent Color -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                            <Label Content="Accent Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemeAccentColorInput" Text="#FFD700"/>
                                <Border x:Name="ThemeAccentColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#FFD700"/>
                            </Grid>
                        </StackPanel>

                        <!-- Background Color -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                            <Label Content="Background Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemeBackgroundColorInput" Text="#1A2F1A"/>
                                <Border x:Name="ThemeBackgroundColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#1A2F1A"/>
                            </Grid>
                        </StackPanel>

                        <!-- Surface Color -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                            <Label Content="Surface/Panel Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemeSurfaceColorInput" Text="#2D4A2D"/>
                                <Border x:Name="ThemeSurfaceColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#2D4A2D"/>
                            </Grid>
                        </StackPanel>

                        <!-- Text Primary Color -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,10">
                            <Label Content="Text Primary Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemeTextPrimaryColorInput" Text="#FFFFFF"/>
                                <Border x:Name="ThemeTextPrimaryColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#FFFFFF"/>
                            </Grid>
                        </StackPanel>

                        <!-- Text Secondary Color -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,10">
                            <Label Content="Text Secondary Color"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ThemeTextSecondaryColorInput" Text="#C8D6C8"/>
                                <Border x:Name="ThemeTextSecondaryColorPreview"
                                        Grid.Column="1"
                                        Width="35" Height="25"
                                        CornerRadius="3"
                                        Margin="5,0,0,0"
                                        Background="#C8D6C8"/>
                            </Grid>
                        </StackPanel>

                        <!-- Font Family -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,10">
                            <Label Content="Font Family"/>
                            <ComboBox x:Name="ThemeFontFamilyCombo" SelectedIndex="0">
                                <ComboBoxItem Content="Segoe UI"/>
                                <ComboBoxItem Content="Arial"/>
                                <ComboBoxItem Content="Verdana"/>
                                <ComboBoxItem Content="Tahoma"/>
                                <ComboBoxItem Content="Calibri"/>
                                <ComboBoxItem Content="Century Gothic"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="Reset to Golf Theme"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ResetTheme_Click"
                                Margin="0,0,10,0"/>
                        <Button Content="Update Color Previews"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Background="#607D8B"
                                Click="UpdateColorPreviews_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Video Settings -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Video Settings"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Label Content="YouTube Video URL"/>
                    <TextBox x:Name="VideoUrlInput"
                             Margin="0,0,0,15"/>

                    <Label Content="Local Video Path"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="VideoPathInput"
                                 Grid.Column="0"
                                 IsReadOnly="True"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1"
                                Content="Browse"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="BrowseVideo_Click"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="Download Video from URL"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="DownloadVideo_Click"
                                Margin="0,0,10,0"/>
                        <TextBlock x:Name="DownloadStatusText"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <ProgressBar x:Name="DownloadProgress"
                                 Height="10"
                                 Margin="0,10,0,0"
                                 Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Splash Screen Settings -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Splash Screen Settings"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Label Content="Splash Title"/>
                    <TextBox x:Name="SplashTitleInput"
                             Margin="0,0,0,15"/>

                    <Label Content="Splash Subtitle"/>
                    <TextBox x:Name="SplashSubtitleInput"
                             Margin="0,0,0,15"/>

                    <CheckBox x:Name="UseSplashBackgroundCheckbox"
                              Content="Use Custom Background Image"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,10"/>

                    <Label Content="Background Image"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SplashBackgroundInput"
                                 Grid.Column="0"
                                 IsReadOnly="True"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1"
                                Content="Browse"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="BrowseSplashBackground_Click"/>
                    </Grid>

                    <StackPanel Margin="0,15,0,0">
                        <Label Content="Text Box Opacity"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="SplashTextOpacitySlider"
                                    Minimum="0.5"
                                    Maximum="1.0"
                                    Value="0.85"
                                    TickFrequency="0.05"
                                    IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Value, ElementName=SplashTextOpacitySlider, StringFormat={}{0:P0}}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock Text="Controls the transparency of the text overlay box on splash screen"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <Label Content="Splash Logo Image (optional)" Margin="0,15,0,0"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SplashImageInput"
                                 Grid.Column="0"
                                 IsReadOnly="True"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1"
                                Content="Browse"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="BrowseSplashImage_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Branding Settings -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Branding"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Label Content="Logo Image"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="LogoPathInput"
                                 Grid.Column="0"
                                 IsReadOnly="True"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1"
                                Content="Browse"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="BrowseLogo_Click"/>
                    </Grid>

                    <Image x:Name="LogoPreview"
                           MaxHeight="100"
                           MaxWidth="200"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Screen Customization -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Screen Customization"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Label Content="PIN Screen Title"/>
                    <TextBox x:Name="PinScreenTitleInput"
                             Margin="0,0,0,15"/>

                    <CheckBox x:Name="ShowCustomMessageCheckbox"
                              Content="Show Custom Message on All Screens"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,10"/>

                    <Label Content="Custom Message (procedures, news, contact info)"/>
                    <TextBox x:Name="CustomMessageInput"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="This message will appear at the bottom of all screens when enabled."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <!-- Monitor Settings -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Process Monitor"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <Label Content="Monitored Process Name (without .exe)"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="MonitoredProcessInput"
                                 Grid.Column="0"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1"
                                Content="Select Process"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="SelectProcess_Click"/>
                    </Grid>

                    <TextBlock Text="SimLock will launch when this process starts."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button Content="Save Settings"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="150"
                        Margin="0,0,15,0"
                        Click="SaveSettings_Click"/>

                <Button Content="Test Lock Screen"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="150"
                        Background="#FF5722"
                        Click="TestLockScreen_Click"/>
            </StackPanel>

            <TextBlock x:Name="SaveStatusText"
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Window>
