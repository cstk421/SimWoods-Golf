<Window x:Class="SimLock.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimLock Admin Panel"
        Width="700" Height="750"
        MinWidth="600" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SurfaceBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="HeaderLogo" MaxHeight="40" MaxWidth="40" Margin="0,0,12,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="SimLock Admin Panel"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="Configure your lock screen settings"
                               FontSize="12"
                               Foreground="#B8E6B8"
                               Margin="0,2,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="SaveButton"
                            Content="Save"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Background="#43A047"
                            Click="SaveSettings_Click"
                            Margin="0,0,8,0"/>
                    <Button Content="Test"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Background="White"
                            Click="TestLockScreen_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="16" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="TabBorder"
                                        Background="Transparent"
                                        Padding="16,10"
                                        Margin="0,0,4,0"
                                        CornerRadius="6,6,0,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="TabBorder" Property="Background" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="TabBorder" Property="Background" Value="#E8E8E8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                </Style>
            </TabControl.Resources>

            <!-- General Tab -->
            <TabItem Header="General">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                        <StackPanel Margin="0,0,8,0">
                            <!-- Security Section -->
                            <TextBlock Text="Security"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <Label Content="4-Digit Unlock Code"/>
                                    <TextBox x:Name="UnlockCodeInput" MaxLength="4"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <Label Content="Admin Password"/>
                                    <TextBox x:Name="AdminPasswordInput"/>
                                </StackPanel>
                            </Grid>

                            <!-- Process Monitor Section -->
                            <TextBlock Text="Process Monitor"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,10,0,16"/>

                            <Label Content="Monitored Process (without .exe)"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="MonitoredProcessInput" Grid.Column="0" Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Select Process"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="SelectProcess_Click"/>
                            </Grid>
                            <TextBlock Text="SimLock will launch when this process starts."
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,16"/>

                            <TextBlock Text="Quick Select Common Apps"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <WrapPanel>
                                <Button Content="GSPRO Launcher"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="CommonApp_Click"
                                        Tag="GSPro Launcher"
                                        Margin="0,0,8,8"/>
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Appearance Tab -->
            <TabItem Header="Appearance">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                        <StackPanel Margin="0,0,8,0">
                            <!-- Splash Screen -->
                            <TextBlock Text="Splash Screen"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Label Content="Title"/>
                            <TextBox x:Name="SplashTitleInput" Margin="0,0,0,12"/>

                            <Label Content="Subtitle"/>
                            <TextBox x:Name="SplashSubtitleInput" Margin="0,0,0,12"/>

                            <CheckBox x:Name="UseSplashBackgroundCheckbox"
                                      Content="Use Custom Background Image"
                                      Margin="0,0,0,12"/>

                            <Label Content="Background Image"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="SplashBackgroundInput" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BrowseSplashBackground_Click"/>
                            </Grid>

                            <Label Content="Text Overlay Opacity"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="SplashTextOpacitySlider"
                                        Minimum="0.5" Maximum="1.0" Value="0.85"
                                        TickFrequency="0.05" IsSnapToTickEnabled="True"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Value, ElementName=SplashTextOpacitySlider, StringFormat={}{0:P0}}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Branding -->
                            <TextBlock Text="Branding"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,10,0,16"/>

                            <Label Content="Logo Image"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="LogoPathInput" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BrowseLogo_Click"/>
                            </Grid>
                            <Image x:Name="LogoPreview" MaxHeight="60" MaxWidth="150" HorizontalAlignment="Left" Margin="0,0,0,12"/>

                            <Label Content="Splash Logo (optional)"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="SplashImageInput" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BrowseSplashImage_Click"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Buttons Tab -->
            <TabItem Header="Buttons">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                        <StackPanel Margin="0,0,8,0">
                            <TextBlock Text="Standard Buttons"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <CheckBox x:Name="ShowReturningGolferCheckbox"
                                      Content="Show 'Returning Golfer' Button (PIN Entry)"
                                      IsChecked="True"
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="ShowTutorialCheckbox"
                                      Content="Show 'Watch Tutorial' Button"
                                      IsChecked="True"
                                      Margin="0,0,0,20"/>

                            <!-- Custom Button 1 -->
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <CheckBox x:Name="ShowCustomButton1Checkbox"
                                              Content="Enable Custom Button 1"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,12"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <Label Content="Button Label"/>
                                            <TextBox x:Name="CustomButton1LabelInput" Text="Custom Action 1"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <Label Content="Action Type"/>
                                            <ComboBox x:Name="CustomButton1ActionCombo" SelectedIndex="0">
                                                <ComboBoxItem Content="Run Executable" Tag="RunExecutable"/>
                                                <ComboBoxItem Content="Open URL" Tag="OpenUrl"/>
                                                <ComboBoxItem Content="Play Local Video" Tag="PlayLocalVideo"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                    <Label Content="Target (File Path or URL)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="CustomButton1TargetInput" Margin="0,0,10,0"/>
                                        <Button Grid.Column="1"
                                                Content="Browse"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Click="BrowseCustomButton1Target_Click"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Custom Button 2 -->
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="6" Padding="16">
                                <StackPanel>
                                    <CheckBox x:Name="ShowCustomButton2Checkbox"
                                              Content="Enable Custom Button 2"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,12"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <Label Content="Button Label"/>
                                            <TextBox x:Name="CustomButton2LabelInput" Text="Custom Action 2"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <Label Content="Action Type"/>
                                            <ComboBox x:Name="CustomButton2ActionCombo" SelectedIndex="0">
                                                <ComboBoxItem Content="Run Executable" Tag="RunExecutable"/>
                                                <ComboBoxItem Content="Open URL" Tag="OpenUrl"/>
                                                <ComboBoxItem Content="Play Local Video" Tag="PlayLocalVideo"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                    <Label Content="Target (File Path or URL)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="CustomButton2TargetInput" Margin="0,0,10,0"/>
                                        <Button Grid.Column="1"
                                                Content="Browse"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Click="BrowseCustomButton2Target_Click"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Video Tab -->
            <TabItem Header="Video">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                        <StackPanel Margin="0,0,8,0">
                            <TextBlock Text="Tutorial Video"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Label Content="YouTube Video URL"/>
                            <TextBox x:Name="VideoUrlInput" Margin="0,0,0,16"/>

                            <Label Content="Local Video Path"/>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="VideoPathInput" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BrowseVideo_Click"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Content="Download Video from URL"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="DownloadVideo_Click"
                                        Margin="0,0,12,0"/>
                                <TextBlock x:Name="DownloadStatusText"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <ProgressBar x:Name="DownloadProgress"
                                         Height="6"
                                         Visibility="Collapsed"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Theme Tab -->
            <TabItem Header="Theme">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                        <StackPanel Margin="0,0,8,0">
                            <TextBlock Text="Color Scheme"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,12">
                                    <Label Content="Primary (Main Buttons &amp; Headers)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemePrimaryColorInput" Text="#2E7D32"/>
                                        <Border x:Name="ThemePrimaryColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#2E7D32" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemePrimaryColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,12">
                                    <Label Content="Secondary (Button Hover)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemeSecondaryColorInput" Text="#60AD5E"/>
                                        <Border x:Name="ThemeSecondaryColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#60AD5E" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemeSecondaryColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,12">
                                    <Label Content="Accent (Highlights &amp; Links)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemeAccentColorInput" Text="#FFD700"/>
                                        <Border x:Name="ThemeAccentColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#FFD700" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemeAccentColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,12">
                                    <Label Content="Background (Main Screen)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemeBackgroundColorInput" Text="#1A2F1A"/>
                                        <Border x:Name="ThemeBackgroundColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#1A2F1A" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemeBackgroundColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,12">
                                    <Label Content="Surface (Cards &amp; Panels)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemeSurfaceColorInput" Text="#2D4A2D"/>
                                        <Border x:Name="ThemeSurfaceColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#2D4A2D" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemeSurfaceColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,12">
                                    <Label Content="Text Primary (Main Text)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemeTextPrimaryColorInput" Text="#FFFFFF"/>
                                        <Border x:Name="ThemeTextPrimaryColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemeTextPrimaryColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,12">
                                    <Label Content="Text Secondary (Subtle Text)"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ThemeTextSecondaryColorInput" Text="#C8D6C8"/>
                                        <Border x:Name="ThemeTextSecondaryColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Margin="6,0,0,0" Background="#C8D6C8" Cursor="Hand" MouseLeftButtonUp="PickColor_Click" Tag="ThemeTextSecondaryColorInput"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,12">
                                    <Label Content="Font Family"/>
                                    <ComboBox x:Name="ThemeFontFamilyCombo" SelectedIndex="0">
                                        <ComboBoxItem Content="Segoe UI"/>
                                        <ComboBoxItem Content="Arial"/>
                                        <ComboBoxItem Content="Verdana"/>
                                        <ComboBoxItem Content="Calibri"/>
                                        <ComboBoxItem Content="Tahoma"/>
                                        <ComboBoxItem Content="Trebuchet MS"/>
                                        <ComboBoxItem Content="Georgia"/>
                                        <ComboBoxItem Content="Times New Roman"/>
                                        <ComboBoxItem Content="Consolas"/>
                                        <ComboBoxItem Content="Roboto"/>
                                        <ComboBoxItem Content="Open Sans"/>
                                        <ComboBoxItem Content="Montserrat"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                <Button Content="Reset to Default"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="ResetTheme_Click"
                                        Margin="0,0,10,0"/>
                                <Button Content="Preview Colors"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="UpdateColorPreviews_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Screen Text Tab -->
            <TabItem Header="Screen Text">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,0">
                        <StackPanel Margin="0,0,8,0">
                            <TextBlock Text="Screen Customization"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,0,16"/>

                            <Label Content="PIN Screen Title"/>
                            <TextBox x:Name="PinScreenTitleInput" Margin="0,0,0,16"/>

                            <CheckBox x:Name="ShowCustomMessageCheckbox"
                                      Content="Show Custom Message on All Screens"
                                      Margin="0,0,0,12"/>

                            <Label Content="Custom Message"/>
                            <TextBox x:Name="CustomMessageInput"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="100"
                                     VerticalScrollBarVisibility="Auto"/>
                            <TextBlock Text="This message will appear at the bottom of all screens when enabled."
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer with Activation -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Activation Section -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="License Status: "
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock x:Name="ActivationStatusText"
                                   Text="Not Activated"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource ErrorBrush}"/>
                        <TextBlock x:Name="LicenseBalanceText"
                                   Text=""
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Activation Input Panel -->
                    <StackPanel x:Name="ActivationInputPanel" Orientation="Horizontal">
                        <TextBox x:Name="ActivationEmailInput"
                                 Width="250"
                                 Margin="0,0,10,0"/>
                        <Button x:Name="ActivateButton"
                                Content="Check License"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="CheckLicense_Click"/>
                    </StackPanel>

                    <!-- Activated Display Panel -->
                    <StackPanel x:Name="ActivatedPanel" Visibility="Collapsed" Orientation="Horizontal">
                        <TextBlock x:Name="ActivationEmailDisplay"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <Button Content="Deactivate"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Background="#FFEBEE"
                                Foreground="#F44336"
                                Click="Deactivate_Click"
                                Margin="12,0,0,0"/>
                    </StackPanel>

                    <TextBlock x:Name="MachineIdDisplay"
                               Text=""
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Copyright Section -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="Created and Rights Owned by"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="NeutroCorp LLC"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="www.neutrocorp.com"
                               FontSize="11"
                               Foreground="{StaticResource PrimaryBrush}"
                               Cursor="Hand"
                               MouseLeftButtonUp="Website_Click"
                               HorizontalAlignment="Right"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                        <TextBlock Text="Support: "
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="support@neutrocorp.com"
                                   FontSize="11"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   Cursor="Hand"
                                   TextDecorations="Underline"
                                   MouseLeftButtonUp="SupportEmail_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
